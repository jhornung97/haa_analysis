#!/bin/bash

home=$(pwd)
echo $home
tar -xzf $home/utils.tar.gz 

. $home/utils/haa_setup.sh

dirs=$(ls -d $home/utils/input/2* | xargs -n1 basename)

iso_mask=$1

mkdir $home/limits

for dir in $dirs; do
    echo "Processing year: $dir"
    #scopes=$(ls -d $HAA/limits/$dir/* | xargs -n1 basename)

    mkdir $home/limits/$dir

    scopes=$(ls -d $home/utils/input/$dir/* | xargs -n1 basename | sort -u)
    scopes="$(echo "$scopes" | grep -v '^combined$'; echo "$scopes" | grep '^combined$')"

    for scope in $scopes; do
        mkdir $home/limits/$dir/$scope
        if [ "$scope" != "combined" ]; then
            echo "Processing scope: $scope"
            python3 $home/utils/scripts/systematics_signal_dcb+gauss.py $scope $dir $iso_mask
            python3 $home/utils/scripts/bkg_fit.py $scope $dir $iso_mask

            cp $home/utils/input/$dir/$scope.txt $home/limits/$dir/$scope/

            cd $home/limits/$dir/$scope
            echo "Running combine for $scope in $dir"
            combine -M AsymptoticLimits $scope.txt -m 125 --saveWorkspace -n .limits_iso_cut_$iso_mask --run blind
        fi
        
        if [ "$scope" == "combined" ]; then
            cd $home/limits/$dir/$scope
            echo "Running combine for combined scope in $dir"
            combine -M AsymptoticLimits $scope.txt -m 125 --saveWorkspace -n .limits_iso_cut_$iso_mask --run blind
        fi

        echo "Finished processing scope: $scope"
    done
    echo "Finished processing year: $dir"
done

mkdir $home/limits/all_years_combined

cp $home/utils/input/all_years_combined_with_2016.txt $home/limits/all_years_combined/
cp $home/utils/input/all_years_combined_only_2016.txt $home/limits/all_years_combined/

cd $home/limits/all_years_combined
echo "Running combine for all years combined"
combine -M AsymptoticLimits all_years_combined_with_2016.txt -m 125 --saveWorkspace -n .limits_iso_cut_$iso_mask --run blind
combine -M AsymptoticLimits all_years_combined_only_2016.txt -m 125 --saveWorkspace -n .limits2016_iso_cut_$iso_mask --run blind

tar -czf $home/limits_$iso_mask.tar.gz $home/limits

xrdcp -rf $home/limits_$iso_mask.tar.gz root://cmsdcache-kit-disk.gridka.de:1094//store/user/jhornung/limitscan
